pkgbase=penguin-system
pkgname=(
    'penguin-base'
    'penguin-desktop'
    'penguin-defaults'
)
pkgver=2
pkgrel=2
pkgdesc="Penguin System"
arch=('any')
url="https://penguin.fyi/"
license=('MIT')

source=(
    'penguin-base.install'
    'penguin-desktop.install'
    'penguin-config-patch.hook'
    'penguin-config-patch.sh'
    'patch-pacman.conf'
    'patch-makepkg.conf'
    'patch-reflector.conf'
    'patch-useradd-shell'
    'patch-issue-ascii'
    'patch-lightdm-gtk-greeter.conf'
    'etc-sudoers-wheel'
    'default-xresources'
    'default-xsession'
    'default-zshrc'
    'default-zshprompt'
    'default-awesome'
    'default-awesome-theme'
    'default-roficonfig'
    'default-rofitheme'
    'default-gtk2'
    'default-gtk3'
    'default-qt5ct'
    'default-picom'
    'default-tmuxconf'
    'default-qutebrowser'
    'README.md'
    'LICENSE'
    'autostart-accessibility'
    'autostart-bluetooth'
    'autostart-compositor'
    'autostart-filesystem'
    'autostart-network'
    'autostart-policy'
    'autostart-powermanager'
    'autostart-screenlock'
    'autostart-sound'
    'autostart-terminal'
    'autostart-volume'
    'autostart-xdgdir'
)

package_penguin-base(){
    pkgdesc="Penguin Base System"
    depends=(
        base linux-firmware grub efibootmgr
        networkmanager openssh ufw fail2ban
        zsh vim curl tmux git
        patch sudo man-db man-pages
    )
    install=penguin-base.install
    install -Dm0644 default-zshrc "$pkgdir"/etc/skel/.zshrc
    install -Dm0644 default-zshprompt "$pkgdir"/etc/skel/.zshrc.prompt
    install -dm0750 "$pkgdir"/etc/sudoers.d
    install -Dm0644 etc-sudoers-wheel "$pkgdir"/etc/sudoers.d/10-wheel
    install -Dm0644 patch-pacman.conf "$pkgdir"/usr/share/penguin/patches/pacman.conf.patch
    install -Dm0644 patch-makepkg.conf "$pkgdir"/usr/share/penguin/patches/makepkg.conf.patch
    install -Dm0644 patch-reflector.conf "$pkgdir"/usr/share/penguin/patches/reflector.conf.patch
    install -Dm0644 patch-useradd-shell "$pkgdir"/usr/share/penguin/patches/useradd.patch
    install -Dm0644 patch-issue-ascii "$pkgdir"/usr/share/penguin/patches/issue.patch
    install -Dm0644 penguin-config-patch.hook "$pkgdir"/usr/share/libalpm/hooks/90-penguin-config-patch.hook
    install -Dm0755 penguin-config-patch.sh "$pkgdir"/usr/share/libalpm/scripts/penguin-config-patch

    install -Dm0644 README.md "$pkgdir"/usr/share/penguin/README.md
    install -Dm0644 LICENSE "$pkgdir"/usr/share/licenses/penguin/LICENSE
}

package_penguin-desktop(){
    pkgdesc="Penguin Desktop packages"
    depends=(
        penguin-base
        xorg-server xorg-drivers xorg-xset xorg-xsetroot xorg-xrdb xorg-xrandr xorg-xdpyinfo
        lightdm lightdm-gtk-greeter lightdm-gtk-greeter-settings light-locker
        awesome awesome-freedesktop-git dex pcmanfm-gtk3 xarchiver
        network-manager-applet blueman polkit-gnome xfce4-power-manager
        pulseaudio pulseaudio-alsa pavucontrol pasystray
        lxappearance-gtk3 qt5ct qt5-styleplugins fontconfig picom rofi rofi-pass xclip
        rxvt-unicode-cvs-patched-wideglyphs xterm ranger htop mailcap
        qutebrowser weechat neomutt newsboat tuir
        mpd mpc ncmpcpp mpv cava zathura zathura-pdf-mupdf
        feh ffmpeg imagemagick maim curl wget rsync w3m urlscan
        vi bat jq fzf dialog fd tree unzip zip lsof pass pwgen gnupg
        zsh-autosuggestions zsh-completions zsh-syntax-highlighting bash-completion
        ipython python-black python-isort eslint python-pyflakes flake8 autopep8 yapf
        python-virtualenv python-virtualenvwrapper
        cmake ctags shellcheck-bin luacheck github-cli
        pacutils pacman-contrib reflector
    )
    install=penguin-desktop.install
    install -Dm0644 patch-lightdm-gtk-greeter.conf "$pkgdir"/usr/share/penguin/patches/lightdm-gtk-greeter.conf.patch
}


package_penguin-defaults(){
    pkgdesc="Penguin Default Theme (Antsy)"
    depends=(
        penguin-desktop
        antsy-gtk-theme antsy-icon-theme antsy-wallpaper xcursor-openzone
        ttf-hack nerd-fonts-hack noto-fonts-emoji
    )
    install -Dm0755 default-xsession "$pkgdir"/etc/skel/.xsession
    install -Dm0644 default-xresources "$pkgdir"/etc/skel/.Xresources
    install -Dm0644 default-awesome "$pkgdir"/etc/skel/.config/awesome/rc.lua
    install -Dm0644 default-awesome-theme "$pkgdir"/etc/skel/.config/awesome/theme.lua
    install -Dm0644 default-roficonfig "$pkgdir"/etc/skel/.config/rofi/config.rasi
    install -Dm0644 default-rofitheme "$pkgdir"/etc/skel/.config/rofi/themes/antsy.rasi
    install -Dm0644 default-gtk2 "$pkgdir"/etc/skel/.gtkrc-2.0
    install -Dm0644 default-gtk3 "$pkgdir"/etc/skel/.config/gtk-3.0/settings.ini
    install -Dm0644 default-qt5ct "$pkgdir"/etc/skel/.config/qt5ct/qt5ct.conf
    install -Dm0644 default-picom "$pkgdir"/etc/skel/.config/picom/picom.conf
    install -Dm0644 default-tmuxconf "$pkgdir"/etc/skel/.tmux.conf
    install -Dm0644 default-qutebrowser "$pkgdir"/etc/skel/.config/qutebrowser/config.py
    install -Dm0644 autostart-accessibility "$pkgdir"/etc/skel/.config/autostart/penguin-accessibility.desktop
    install -Dm0644 autostart-bluetooth "$pkgdir"/etc/skel/.config/autostart/penguin-bluetooth.desktop
    install -Dm0644 autostart-compositor "$pkgdir"/etc/skel/.config/autostart/penguin-compositor.desktop
    install -Dm0644 autostart-filesystem "$pkgdir"/etc/skel/.config/autostart/penguin-filesystem.desktop
    install -Dm0644 autostart-network "$pkgdir"/etc/skel/.config/autostart/penguin-network.desktop
    install -Dm0644 autostart-policy "$pkgdir"/etc/skel/.config/autostart/penguin-policy.desktop
    install -Dm0644 autostart-powermanager "$pkgdir"/etc/skel/.config/autostart/penguin-powermanager.desktop
    install -Dm0644 autostart-screenlock "$pkgdir"/etc/skel/.config/autostart/penguin-screenlock.desktop
    install -Dm0644 autostart-sound "$pkgdir"/etc/skel/.config/autostart/penguin-sound.desktop
    install -Dm0644 autostart-terminal "$pkgdir"/etc/skel/.config/autostart/penguin-terminal.desktop
    install -Dm0644 autostart-volume "$pkgdir"/etc/skel/.config/autostart/penguin-volume.desktop
    install -Dm0644 autostart-xdgdir "$pkgdir"/etc/skel/.config/autostart/penguin-xdgdir.desktop
}

